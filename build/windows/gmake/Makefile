# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug32
endif
export config

PROJECTS := sampgdk helloworld1 helloworld2

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

sampgdk: 
	@echo "==== Building sampgdk ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f sampgdk.make

helloworld1: sampgdk
	@echo "==== Building helloworld1 ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f helloworld1.make

helloworld2: sampgdk
	@echo "==== Building helloworld2 ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f helloworld2.make

clean:
	@${MAKE} --no-print-directory -C . -f sampgdk.make clean
	@${MAKE} --no-print-directory -C . -f helloworld1.make clean
	@${MAKE} --no-print-directory -C . -f helloworld2.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug32"
	@echo "   release32"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   sampgdk"
	@echo "   helloworld1"
	@echo "   helloworld2"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
